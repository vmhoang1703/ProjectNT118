    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="800dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/info_bg"
        android:layout_marginTop="50dp">

        <ImageView
            android:id="@+id/avatar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="172dp"
            android:layout_marginTop="65dp"
            android:src="@mipmap/user"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/usernameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="vmhoang1703"
            android:layout_centerHorizontal="true"
            android:textSize="18dp"
            android:layout_below="@id/avatar"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/textViewFirstname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/showFirstname"
            android:layout_alignParentStart="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="30dp"
            android:layout_marginBottom="5dp"
            android:text="@string/firstname_en"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/showFirstname"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:paddingLeft="50px"
            android:textSize="15dp"
            android:inputType="text"
            android:background="@drawable/borderbtn"
            android:layout_above="@+id/textViewLastname"/>

        <TextView
            android:id="@+id/textViewLastname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/showLastname"
            android:layout_alignParentStart="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="30dp"
            android:layout_marginBottom="5dp"
            android:text="@string/lastname_en"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/showLastname"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:paddingLeft="50px"
            android:textSize="15dp"
            android:inputType="textEmailAddress"
            android:background="@drawable/borderbtn"
            android:layout_above="@+id/textViewUsername"/>

        <TextView
            android:id="@+id/textViewUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/showUsername"
            android:layout_alignParentStart="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="30dp"
            android:layout_marginBottom="5dp"
            android:text="@string/username_text_en"
            android:textSize="18dp" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/user"
            android:layout_above="@+id/textViewEmail"
            android:layout_marginBottom="34dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="45dp"
            android:translationZ="@android:dimen/app_icon_size" />

        <TextView
            android:id="@+id/showUsername"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:paddingLeft="50px"
            android:textSize="15dp"
            android:inputType="text"
            android:background="@drawable/borderbtn"
            android:layout_above="@+id/textViewEmail"/>

        <TextView
            android:id="@+id/textViewEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/showEmail"
            android:layout_alignParentStart="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="30dp"
            android:layout_marginBottom="5dp"
            android:text="@string/email_text"
            android:textSize="18dp" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/mail"
            android:layout_above="@+id/edit_btn"
            android:layout_marginBottom="64dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="45dp"
            android:translationZ="@android:dimen/app_icon_size" />


        <TextView
            android:id="@+id/showEmail"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="50dp"
            android:textSize="15dp"
            android:inputType="textEmailAddress"
            android:background="@drawable/borderbtn"
            android:layout_above="@+id/edit_btn"/>



        <TextView
            android:id="@+id/edit_btn"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:background="@drawable/shadowbtn"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="110dp"
            android:text="@string/edit_en"
            android:textColor="#9cb6c4"
            android:gravity="center"
            android:textSize="20dp"
            android:textStyle="bold"
            android:elevation="7dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/menu_bg">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true">
                <RelativeLayout
                    android:id="@+id/homeNavi"
                    android:layout_width="53.43dp"
                    android:layout_height="38dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true">
                    <ImageView
                        android:id="@+id/homeIcon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@mipmap/home"
                        android:layout_centerHorizontal="true"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Home"
                        android:textSize="10dp"
                        android:layout_below="@+id/homeIcon"
                        android:layout_centerHorizontal="true"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/graphNavi"
                    android:layout_width="53.43dp"
                    android:layout_height="38dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/homeNavi"
                    android:layout_marginLeft="30dp">
                    <ImageView
                        android:id="@+id/graphIcon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@mipmap/graph"
                        android:layout_centerHorizontal="true"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Graph"
                        android:textSize="10dp"
                        android:layout_below="@+id/graphIcon"
                        android:layout_centerHorizontal="true"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/mapNavi"
                    android:layout_width="53.43dp"
                    android:layout_height="38dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/graphNavi"
                    android:layout_marginLeft="30dp">
                    <ImageView
                        android:id="@+id/mapIcon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@mipmap/location_img"
                        android:layout_centerHorizontal="true"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Map"
                        android:textSize="10dp"
                        android:layout_below="@+id/mapIcon"
                        android:layout_centerHorizontal="true"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/personalNavi"
                    android:layout_width="53.43dp"
                    android:layout_height="38dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/mapNavi"
                    android:layout_marginLeft="30dp">
                    <ImageView
                        android:id="@+id/personalIcon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@mipmap/personal"
                        android:layout_centerHorizontal="true"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Profile"
                        android:textSize="10dp"
                        android:layout_below="@+id/personalIcon"
                        android:layout_centerHorizontal="true"/>
                </RelativeLayout>

            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>
