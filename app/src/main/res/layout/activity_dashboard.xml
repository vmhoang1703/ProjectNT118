<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Username -->
    <TextView
        android:id="@+id/usernameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome, [Username]"
        android:textSize="18sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <!-- Main information displayed -->
    <TextView
        android:id="@+id/mainInfoTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Main Information Here"
        android:textSize="24sp"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp" />

    <!-- Different tabs -->
    <Button
        android:id="@+id/tab1Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tab 1"
        android:layout_alignParentStart="true"
        android:layout_below="@id/mainInfoTextView"
        android:layout_marginTop="20dp" />

    <Button
        android:id="@+id/tab2Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tab 2"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/mainInfoTextView"
        android:layout_marginTop="20dp" />

    <Button
        android:id="@+id/tab3Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tab 3"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/mainInfoTextView"
        android:layout_marginTop="20dp" />
</RelativeLayout>
