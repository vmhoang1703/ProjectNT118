<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/languageButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:background="@color/white"
        android:scaleType="centerInside"
        android:src="@drawable/vietnamese"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_margin="16dp"/>

    <ImageView
        android:layout_width="340dp"
        android:layout_height="400dp"
        android:src="@drawable/art"
        android:layout_alignParentTop="true"
        android:layout_marginTop="-97dp" />

    <ImageView
        android:id="@+id/back_arrow"
        android:layout_width="30dp"
        android:layout_height="25dp"
        android:src="@drawable/arrow"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="15dp"/>

    <TextView
        android:id="@+id/back_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="70dp"
        android:layout_marginTop="12dp"
        android:text="Back"
        android:textColor="@color/white"
        android:textSize="23dp" />

    <TextView
        android:id="@+id/welcome_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="75dp"
        android:text="Welcome back,"
        android:textColor="@color/white"
        android:textSize="23dp" />

    <TextView
        android:id="@+id/signup_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="105dp"
        android:text="Sign in!"
        android:textColor="@color/white"
        android:textSize="35dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/textViewEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editTextEmail"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="5dp"
        android:text="Email"
        android:textSize="18dp" />

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/mail"
        android:layout_above="@+id/textViewPassword"
        android:layout_marginBottom="34dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="55dp"
        android:translationZ="@android:dimen/app_icon_size" />

    <EditText
        android:id="@+id/editTextEmail"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:hint="Type..."
        android:paddingLeft="50px"
        android:textSize="15dp"
        android:inputType="textEmailAddress"
        android:background="@drawable/borderbtn"
        android:layout_above="@+id/textViewPassword"/>



    <TextView
        android:id="@+id/textViewPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editTextPassword"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="5dp"
        android:text="Password"
        android:textSize="18dp" />


    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_above="@+id/forgotpassword"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="55dp"
        android:layout_marginBottom="23dp"
        android:src="@drawable/hidebl"
        android:translationZ="@android:dimen/app_icon_size" />

    <EditText
        android:id="@+id/editTextPassword"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:hint="Type..."
        android:paddingLeft="50px"
        android:textSize="15dp"
        android:inputType="textPassword"
        android:background="@drawable/borderbtn"
        android:layout_above="@+id/forgotpassword"/>

    <TextView
        android:id="@+id/forgotpassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ForgotPassword"
        android:layout_above="@+id/signin_btn"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="50dp"/>

    <TextView
        android:id="@+id/signin_btn"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:background="@drawable/shadowbtn_blue"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="250dp"
        android:text="SIGN IN"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="20dp"
        android:textStyle="bold"
        android:elevation="7dp"/>

</RelativeLayout>
